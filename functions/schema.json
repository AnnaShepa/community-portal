{
  "Projects": {
    "Type": "AWS::DynamoDB::Table",
    "DeletionPolicy": "Retain",
    "Properties": {
      "AttributeDefinitions": [
        {
          "AttributeName": "project_id",
          "AttributeType": "S"
        },
        {
          "AttributeName": "status",
          "AttributeType": "S"
        },
        {
          "AttributeName": "upvotes",
          "AttributeType": "N"
        }
      ],
      "KeySchema": [
        {
          "AttributeName": "project_id",
          "KeyType": "HASH"
        }
      ],
      "GlobalSecondaryIndexes": [
        {
          "IndexName": "community-portal-projects-status-upvotes-index",
          "KeySchema": [
            {
               "AttributeName": "status",
               "KeyType": "HASH"
            },
            {
               "AttributeName": "upvotes",
               "KeyType": "RANGE"
            }
          ],
          "Projection": {
            "ProjectionType": "INCLUDE",
            "NonKeyAttributes": [
              "created",
              "description",
              "status",
              "estimated",
              "pledged",
              "completed",
              "upvotes",
              "owner",
              "size",
              "tags",
              "pledgers",
              "contributors"
            ]
          },
          "ProvisionedThroughput": {
            "ReadCapacityUnits": 5,
            "WriteCapacityUnits": 5
          }
        }
      ],
      "ProvisionedThroughput": {
        "ReadCapacityUnits": 5,
        "WriteCapacityUnits": 5
      },
      "TableName": "community-portal-projects"
    }
  },
  "Users": {
    "Type": "AWS::DynamoDB::Table",
    "DeletionPolicy": "Retain",
    "Properties": {
      "AttributeDefinitions": [
        {
          "AttributeName": "user_id",
          "AttributeType": "S"
        }
      ],
      "KeySchema": [
        {
          "AttributeName": "user_id",
          "KeyType": "HASH"
        }
      ],
      "ProvisionedThroughput": {
        "ReadCapacityUnits": 5,
        "WriteCapacityUnits": 5
      },
      "TableName": "community-portal-users"
    }
  },
  "Tags": {
    "Type": "AWS::DynamoDB::Table",
    "DeletionPolicy": "Retain",
    "Properties": {
      "AttributeDefinitions": [
        {
          "AttributeName": "tag_name",
          "AttributeType": "S"
        }
      ],
      "KeySchema": [
        {
          "AttributeName": "tag_name",
          "KeyType": "HASH"
        }
      ],
      "ProvisionedThroughput": {
        "ReadCapacityUnits": 5,
        "WriteCapacityUnits": 5
      },
      "TableName": "community-portal-tags"
    }
  },
  "Skills": {
    "Type": "AWS::DynamoDB::Table",
    "DeletionPolicy": "Retain",
    "Properties": {
      "AttributeDefinitions": [
        {
          "AttributeName": "skill_name",
          "AttributeType": "S"
        }
      ],
      "KeySchema": [
        {
          "AttributeName": "skill_name",
          "KeyType": "HASH"
        }
      ],
      "ProvisionedThroughput": {
        "ReadCapacityUnits": 5,
        "WriteCapacityUnits": 5
      },
      "TableName": "community-portal-skills"
    }
  }
}
